{
  "name": "kinetic-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "yarn": "yarn",
    "start-production": "node -r ./tsconfig-paths-bootstrap.js ./build/Server.js",
    "start": "nodemon -L ./src/Server.ts",
    "build": "rimraf build && tsc",
    "lint": "tsc --noEmit && eslint --ext .js,.jsx,.ts,.tsx --max-warnings=0 --color .",
    "lint-fix": "tsc --noEmit && eslint --ext .js,.jsx,.ts,.tsx --max-warnings=0 --color --fix .",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test-clear": "rimraf coverage && jest --clearCache",
    "pre-commit": "yarn run lint --fix && yarn run test-clear && yarn run test-coverage"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bluebird": "^3.7.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "immutability-helper": "^3.1.1",
    "inversify": "^5.0.5",
    "joi": "^17.4.0",
    "mongoose": "^5.11.18",
    "node-ssh": "^11.1.1",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "tsconfig-paths": "^3.9.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.33",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/joi": "^17.2.3",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.31",
    "@types/node-ssh": "^7.0.0",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.0.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "openapi-types": "^7.2.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^3.8.3"
  }
}
